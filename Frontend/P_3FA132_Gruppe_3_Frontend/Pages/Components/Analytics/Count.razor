@typeparam TValue where TValue : System.Numerics.INumber<TValue>

<div class="count-widget card">
    @if (ShowTitle)
    {
        <div class="count-widget-title-container">
            <h3 class="count-widget-title">
                @Title
            </h3>
        </div>
    }
    <div class="count-widget-container">
        @if (ShowIcon)
        {
            <div class="count-widget-icon-container">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="@IconSvgPath"/>
                </svg>
            </div>
        }
        <div class="count-widget-value-container">
            <p class="count-widget-value">
                @Value
            </p>
        </div>
    </div>
</div>
@code {
    [Parameter] public string? Title { get; set; } = "CountWidget";
    [Parameter] public bool ShowIcon { get; set; } = true;
    [Parameter] public bool ShowTitle { get; set; } = false;

    [EditorRequired] [Parameter] public TValue? Value { get; set; }
